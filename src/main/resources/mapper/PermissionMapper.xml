<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxxx.satokendemospringboot.mapper.PermissionMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.xxxx.satokendemospringboot.pojo.Permission">
        <id column="id" property="id" />
        <result column="roleId" property="roleId" />
        <result column="moduleId" property="moduleId" />
        <result column="aclValue" property="aclValue" />
        <result column="createDate" property="createDate" />
        <result column="updateDate" property="updateDate" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, roleId, moduleId, aclValue, createDate, updateDate
    </sql>
    <select id="getPermissionList" resultType="java.lang.String">
        select p.aclValue from t_permission p join t_user_role ur using(roleId) where ur.userId=#{loginId}
    </select>
</mapper>
